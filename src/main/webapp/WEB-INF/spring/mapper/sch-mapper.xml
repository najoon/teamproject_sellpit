<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.callor.school.pesistance.SchDao">
	<select id="selectAll" resultType="SchVO">
		SELECT * FROM tbl_sch
	</select>
	
	<select id="idAll" resultType="SchVO">
		SELECT * FROM tbl_sch WHERE sc_id = #{sc_id}
	</select>
	
	<select id="findById" resultType="SchVO">
		SELECT * FROM tbl_sch WHERE sc_id = #{sc_id}
	</select>
	
	<insert id="insert" parameterType="SchVO">
		INSERT INTO tbl_sch
			(
				sc_id, 
				sc_label, 
				sc_division, 
				sc_day,
				sc_part
			) VALUES (
				#{sc_id}, 
				#{sc_label}, 
				#{sc_division}, 
				#{sc_day},
				#{sc_part}
			)
	</insert>
	<update id="update" parameterType="SchVO">
		UPDATE tbl_sch SET
				sc_label = #{sc_label}, 
				sc_division = #{sc_division},
				sc_day = #{sc_day},
				sc_part = #{sc_part},
		WHERE sc_id = #{sc_id} 
	</update>
	<delete id="delete">
		DELETE FROM tbl_sch WHERE sc_id = #{sc_id}
	</delete>
</mapper>





